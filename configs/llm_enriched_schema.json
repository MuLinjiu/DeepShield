{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/llm_enriched_schema.json",
  "title": "Enriched Flow Window Record",
  "description": "LLM-ready flow-window record with structured features and rich payload/events context.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "flow_id",
    "tuple5",
    "window",
    "features",
    "enriched",
    "label"
  ],
  "properties": {
    "flow_id": {
      "type": "integer",
      "minimum": 1,
      "description": "Sequential identifier within the JSONL slice (1-based)."
    },
    "tuple5": {
      "type": "array",
      "description": "Canonical (src_ip, dst_ip, src_port, dst_port, proto) describing the flow.",
      "prefixItems": [
        { "type": "string", "description": "Source IP address." },
        { "type": "string", "description": "Destination IP address." },
        { "type": "integer", "description": "Source transport port (0-65535)." },
        { "type": "integer", "description": "Destination transport port (0-65535)." },
        { "type": "integer", "description": "IP protocol number (e.g., 6=TCP)." }
      ],
      "items": false,
      "minItems": 5
    },
    "window": {
      "type": "array",
      "description": "Flow window start and end timestamps (seconds since epoch).",
      "prefixItems": [
        { "type": "number", "description": "Window start timestamp." },
        { "type": "number", "description": "Window end timestamp." }
      ],
      "items": false,
      "minItems": 2
    },
    "label": {
      "type": "string",
      "description": "Ground-truth class label assigned after alignment (e.g., BENIGN, attack name, unknown)."
    },
    "features": {
      "type": "object",
      "description": "Numeric flow features computed within the window.",
      "required": [
        "pkt_cnt_fwd",
        "pkt_cnt_bwd",
        "byte_cnt_fwd",
        "byte_cnt_bwd",
        "fwd_bwd_ratio_pkt",
        "fwd_bwd_ratio_byte",
        "tcp_syn_ratio",
        "tcp_fin_ratio",
        "tcp_rst_ratio"
      ],
      "properties": {
        "pkt_cnt_fwd": { "type": ["integer", "number"], "description": "Forward-direction packet count." },
        "pkt_cnt_bwd": { "type": ["integer", "number"], "description": "Backward-direction packet count." },
        "byte_cnt_fwd": { "type": ["integer", "number"], "description": "Forward-direction byte count." },
        "byte_cnt_bwd": { "type": ["integer", "number"], "description": "Backward-direction byte count." },
        "fwd_bwd_ratio_pkt": { "type": ["integer", "number"], "description": "Forward/backward packet ratio with safe division." },
        "fwd_bwd_ratio_byte": { "type": ["integer", "number"], "description": "Forward/backward byte ratio with safe division." },
        "tcp_syn_ratio": { "type": ["integer", "number"], "description": "Share of TCP packets carrying the SYN flag." },
        "tcp_fin_ratio": { "type": ["integer", "number"], "description": "Share of TCP packets carrying the FIN flag." },
        "tcp_rst_ratio": { "type": ["integer", "number"], "description": "Share of TCP packets carrying the RST flag." },
        "pkt_size_hist": {
          "type": "array",
          "description": "L2-normalised histogram across packet-length bins.",
          "items": { "type": "number" }
        },
        "iat_hist": {
          "type": "array",
          "description": "L2-normalised histogram across inter-arrival-time bins (milliseconds).",
          "items": { "type": "number" }
        }
      },
      "additionalProperties": {
        "description": "Additional numeric or categorical flow features.",
        "type": ["number", "integer", "string", "boolean", "array", "null"]
      }
    },
    "enriched": {
      "type": "object",
      "description": "Rich payload-aware context for the window.",
      "additionalProperties": false,
      "required": [
        "context_summary",
        "events",
        "event_count",
        "payload",
        "protocols",
        "proto_name"
      ],
      "properties": {
        "context_summary": {
          "type": "string",
          "description": "Natural-language summary blending instantaneous and rolling statistics."
        },
        "events": {
          "type": "array",
          "description": "Key packet snapshots within the window (max 10).",
          "maxItems": 10,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["offset_ms", "direction", "proto", "len", "payload_len", "flags"],
            "properties": {
              "offset_ms": {
                "type": "number",
                "description": "Offset from window start to packet (milliseconds)."
              },
              "direction": {
                "type": "string",
                "enum": ["FWD", "BWD"],
                "description": "Canonical flow direction of the packet."
              },
              "proto": {
                "type": "string",
                "description": "Human-readable protocol label for the packet (e.g., TCP, UDP)."
              },
              "len": {
                "type": "integer",
                "minimum": 0,
                "description": "Captured frame length in bytes."
              },
              "payload_len": {
                "type": "integer",
                "minimum": 0,
                "description": "Application payload length in bytes."
              },
              "flags": {
                "type": "array",
                "description": "TCP control flags present on the packet.",
                "items": { "type": "string" }
              },
              "tcp_window": {
                "type": "integer",
                "minimum": 0,
                "description": "Advertised TCP window size (if available)."
              },
              "preview": {
                "type": "string",
                "description": "Printable ASCII preview (â‰¤32 chars) of payload."
              },
              "application": {
                "type": "string",
                "description": "Protocol-specific summary (HTTP request line, DNS query, TLS SNI, etc.)."
              },
              "text": {
                "type": "string",
                "description": "Preformatted textual description combining the above fields."
              }
            }
          }
        },
        "event_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of events included (should equal len(events))."
        },
        "payload": {
          "type": "object",
          "description": "Aggregated payload statistics and previews.",
          "additionalProperties": false,
          "required": [
            "total_len",
            "entropy",
            "ascii_ratio",
            "head_ascii",
            "head_hex",
            "tail_ascii",
            "tail_hex",
            "truncated"
          ],
          "properties": {
            "total_len": {
              "type": "integer",
              "minimum": 0,
              "description": "Total concatenated payload bytes in the window."
            },
            "entropy": {
              "type": "number",
              "minimum": 0,
              "description": "Shannon entropy (bits per byte) of the concatenated payload."
            },
            "ascii_ratio": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Proportion of ASCII/printable payload characters."
            },
            "head_ascii": {
              "type": "string",
              "description": "ASCII rendering of the first N payload bytes (N=payload_head_bytes)."
            },
            "head_hex": {
              "type": "string",
              "description": "Hex rendering of the first N payload bytes."
            },
            "tail_ascii": {
              "type": "string",
              "description": "ASCII rendering of the last N payload bytes (N=payload_tail_bytes)."
            },
            "tail_hex": {
              "type": "string",
              "description": "Hex rendering of the last N payload bytes."
            },
            "truncated": {
              "type": "boolean",
              "description": "Whether payload previews were truncated (i.e., total_len > head+tail budget)."
            }
          }
        },
        "protocols": {
          "type": "array",
          "description": "Distinct protocol tokens seen in the window (from tshark protocol stack).",
          "items": { "type": "string" }
        },
        "proto_name": {
          "type": "string",
          "description": "Canonical protocol label for the entire flow (e.g., TCP, UDP)."
        }
      }
    }
  }
}
